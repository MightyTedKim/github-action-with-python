name: Run DockerOperator Image

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  run_docker_operator:
    runs-on: ubuntu-latest

    steps:
      # Step 1: Check out the code from the repository
      - name: Checkout code
        uses: actions/checkout@v2

      # Step 2: Set up Python 3.9 (you can change this to an available version)
      - name: Set up Python 3.9
        uses: actions/setup-python@v2
        with:
          python-version: '3.9'  # Use an available Python version

      # Step 3: Log in to Docker Hub (optional, if the image is private)
      # - name: Log in to Docker Hub
      #   uses: docker/login-action@v2
      #   with:
      #     username: ${{ secrets.DOCKER_USERNAME }}
      #     password: ${{ secrets.DOCKER_PASSWORD }}

      # Step 4: Pull and run the Docker image
      - name: Run docker image with Python script
        run: |
          docker pull deet1107/gesture_model_airflow
          docker run deet1107/gesture_model_airflow python main.py

name: v_test_docker_harbor

on: push

jobs:
  v_deploy:
    name: v_deployjob
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v2
      - name: Set up Python 3.7
        uses: actions/setup-python@v1
        with:
          python-version: 3.7
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install -r requirements-test.txt
      - name: Test
        run: |
          pytest
      - name: Login to Dockerharbor
        uses: docker/login-action@v1
        with:
          registry: demo.goharbor.io
          username: ${{ secrets.HARBOR_USERNAME }}
          password: ${{ secrets.HARBOR_TOKEN }}
      - name: build and release to DockerHarbor
        env:  # 환경변수로 값을 지정하여 사용할 수 있습니다.
          REPO: test-tedkim
          LAYER_NAME: v_layer
        run: |
          docker build -t $LAYER_NAME  .
          docker tag $LAYER_NAME:latest $REPO/$LAYER_NAME:latest
          docker push $REPO/$LAYER_NAME:latest
